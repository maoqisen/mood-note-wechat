/* pages/user/login.wxss */

page{
  width: 100%;
  height: 100%;
}

.view-center{
  margin-left: auto;
  margin-right: auto;
}

.login{
  width: 100%;
  height: 100%;
  background-color: #FFF;
}

.none{
  width: 100%;
  height: 80px;
}

.logo{
  width: 80px;
  height: 80px;
}

.logo image{
  width: 80px;
  height: 80px;
  border-radius:40px;
}

.title{
  width: 100%;
  height: 30px;
  margin-top: 10px;
  line-height: 30px;
  text-align: center;
  font-size: 18px;
  color: #2d2d2d;
  font-weight: bold;
}

.content{
  width: 200px;
  height: 50px;
  line-height: 25px;
  margin-top: 20px;
  color: #b8b8b8;
  font-size: 14px;
}

.login-button{
  height: 40px;
  width: 150px;
  margin-top: 20px;
  line-height: 40px;
  border-radius:5px 5px 5px 5px;
  background-color: #0bb908;
  color: #FFF;
}

.motto{
  width: 100%;
  height: 30px;
  line-height: 30px;
  margin-top: 80px;
  text-align: center;
  color: #c7c7c7;
  font-weight: 500;
  font-size: 14px;
}

